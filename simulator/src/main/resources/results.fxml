<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ResultsController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Simulation Results" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <VBox spacing="5">
        <Label text="Total Earnings:" />
        <Label fx:id="totalEarningsLabel" text="0 $" style="-fx-font-weight: bold;" />

        <Label text="Served Regular Cars:" />
        <Label fx:id="servedRegularCarsLabel" text="0" style="-fx-font-weight: bold;" />

        <Label text="Served Electric Cars:" />
        <Label fx:id="servedElectricCarsLabel" text="0" style="-fx-font-weight: bold;" />

        <Label text="Rejected Customers:" />
        <Label fx:id="rejectedCustomersLabel" text="0" style="-fx-font-weight: bold;" />
    </VBox>
    <Button text="Close" onAction="#handleCloseButton" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;" />
</VBox>