<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HelpController" spacing="10" style="-fx-padding: 20;">
    <Label text="Instructions for using the program" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextArea fx:id="helpTextArea" editable="false" wrapText="true" style="-fx-font-size: 14px;" />
    <Button text="close" onAction="#handleCloseButton" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;" />
</VBox>