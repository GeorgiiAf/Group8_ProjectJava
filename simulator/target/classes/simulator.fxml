<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="797.0" prefWidth="1210.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SimulaattorinController">
    <left>
        <VBox prefHeight="663.0" prefWidth="320.0" spacing="5.0" styleClass="vbox">

            <Label styleClass="blue-background-label" text="PARAMETERS" />
            <GridPane hgap="10" prefHeight="312.0" prefWidth="318.0" styleClass="left-padding" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints />
                </rowConstraints>
                <!-- Regular Car Spots -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label styleClass="label" text="Regular Car Spots 🚙" />
                    <TextField fx:id="regularCarSpots" promptText="Enter number" styleClass="text-field" />
                </VBox>

                <!-- Electric Car Spots -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label styleClass="label" text="Electric Car Spots 🚗⚡" />
                    <TextField fx:id="electricCarSpots" promptText="Enter number" styleClass="text-field" />
                </VBox>

                <!-- Number of Customers -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label styleClass="label" text="Number of Customers 👥" />
                    <TextField fx:id="customerCount" promptText="Enter number" styleClass="text-field" />
                </VBox>

                <!-- Parts Waiting Time -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Label styleClass="label" text="Parts Waiting Time ⏳" />
                    <Slider fx:id="partsWaitingTimeSlider" max="10" min="1" value="5" />
                </VBox>

                <!-- Regular Car Service Cost -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <Label styleClass="label" text="Regular Car Service Cost 💰" />
                    <TextField fx:id="regularCarServiceCost" promptText="Enter cost" styleClass="text-field" />
                </VBox>

                <!-- Electric Car Service Cost -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="5">
                    <Label styleClass="label" text="Electric Car Service Cost 💰⚡" />
                    <TextField fx:id="electricCarServiceCost" promptText="Enter cost" styleClass="text-field" />
                </VBox>

                <!-- Parts Cost -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="6">
                    <Label styleClass="label" text="Parts Cost 🛠️" />
                    <TextField fx:id="partsCost" promptText="Enter price" styleClass="text-field" />
                </VBox>
            </GridPane>

            <!-- Simulation Control Section -->
            <Label styleClass="blue-background-label" text="SIMULATION CONTROL" />
            <HBox spacing="10.0">
                <Button fx:id="startButton" styleClass="start-button" text="Start 🚗" />
                <Button fx:id="pauseButton" styleClass="pause-button" text="Pause ⏸️" />
                <Button fx:id="stopButton" styleClass="stop-button" text="Stop 🛑" />
            </HBox>


            <VBox spacing="5.0" styleClass="left-padding">
                <Label styleClass="label" text="Simulation Time (seconds):" />
                <TextField fx:id="aika" promptText="Enter time" styleClass="text-field" />

                <Label styleClass="label" text="Delay (milliseconds):" />
                <TextField fx:id="viive" promptText="Enter delay" styleClass="text-field" />

                <HBox spacing="10.0">
                    <Button fx:id="speedUpButton" styleClass="control-button" text="Speed Up ⏩" />
                    <Button fx:id="slowDownButton" styleClass="control-button" text="Slow Down ⏪" />
                </HBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <!-- Central Panel with Visualization -->
        <AnchorPane prefHeight="727.0" prefWidth="581.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="carRepairCanvas" height="588.0" width="693.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children></AnchorPane>
    </center>

    <right>
        <!-- Right Panel with Simulation Status -->
        <VBox prefHeight="200.0" prefWidth="200.0" spacing="5.0" styleClass="vbox">
            <Label styleClass="blue-background-label" text="SIMULATION STATUS" />
            <VBox spacing="5">
                <!-- Rejected Customers -->
                <Label styleClass="status-label" text="Rejected Customers: 😠" />
                <Label fx:id="tulos" styleClass="label" text="0" />

                <!-- Earned Money -->
                <Label styleClass="status-label" text="Earned Money: 💵" />
                <Label fx:id="earnedMoneyLabel" styleClass="label" text="0 $" />

                <!-- Served Regular Cars -->
                <Label styleClass="status-label" text="Served Regular Cars: 🚙" />
                <Label fx:id="servedRegularCarsLabel" styleClass="label" text="0" />

                <!-- Served Electric Cars -->
                <Label styleClass="status-label" text="Served Electric Cars: 🚗⚡" />
                <Label fx:id="servedElectricCarsLabel" styleClass="label" text="0" />
            </VBox>
        </VBox>
    </right>

    <bottom>
        <!-- Bottom Panel with Logs -->
        <VBox>
            <TextArea fx:id="logTextArea" prefHeight="151.0" prefWidth="1210.0" promptText="Simulation logs..." styleClass="text-field" />
            <HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="770.0">
                <Label fx:id="inputErrorLabel" textFill="RED" />
                <Pane prefHeight="38.0" prefWidth="233.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="helpButton" onAction="#handleHelpButton" styleClass="emoji-button" text="help❓" />
                <Button fx:id="showResultsButton" onAction="#handleShowResultsButton" style="-fx-background-color: #A0B8F7; -fx-text-fill: white; -fx-font-weight: bold;" text="Show Results" />
            </HBox>
        </VBox>
    </bottom>

    <top>
        <!-- Top Panel with Title -->
        <Label styleClass="title-label" text="Car Workshop Simulator 🚗🔧" BorderPane.alignment="CENTER" />
    </top>
</BorderPane>
